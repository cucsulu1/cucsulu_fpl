@using HopNguyenModel
@model IEnumerable<HopNguyenModel.Admin>
@{
    ViewBag.Title = "Tài khoản quản trị";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="page-header position-relative">
    <h1>Tài khoản quản trị
    </h1>
</div>
<!--/.page-header-->
<div class="row-fluid">
    <div class="choose-type">
        <div class="span2">
            <a href="/Cpanel/CreateAccount" class="btn btn-primary">Tạo mới</a>
        </div>
    </div>
</div>
<div class="row-fluid">
    <table id="sample-table-2" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Họ tên</th>
                <th>Tên đăng nhập</th>
                <th>Email</th>
                <th>Đăng nhập</th>
                <th>Thêm nhóm trang</th>
                <th>Thêm trang</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><a href="/Cpanel/EditAccount/@item.Id">@item.Fullname</a></td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.LastLogin</td>
                    <td><a href="/Cpanel/AddGroupPage/@item.Id" title="Thêm nhóm trang quản trị cho tài khoản">
                        <img src="/Backend/img/AddRecord.gif" /></a></td>
                    <td><a href="/Cpanel/AddPage/@item.Id" title="Thêm trang quản trị cho tài khoản">
                        <img src="/Backend/img/AddRecord.gif" /></a></td>
                    <td>
                        <a href="/Cpanel/ActiveAccount/@item.Id" onclick="javascript:return confirm('Are you sure?');">@(item.Active == true ? "Khóa tài khoản" : "Kích hoạt")</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

