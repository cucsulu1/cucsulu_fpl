@model HopNguyenModel.TypePage
@{
    ViewBag.Title = "Sửa: " + Model.Name;
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="box-big row-fluid">
    <h4>Sửa: @Model.Name</h4>
    <div class="box-big-bg span12">
        @if (ViewBag.msg == "success")
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>Thành công!</strong> Cập nhật thành công.
            </div>
        }
        <form id="validate" action="/cpanel/EditGroupPage" method="POST">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <div class="formField">
                <div class="row-fluid">
                    <div class="span2">
                        <span class="fLabel">Tên nhóm</span>
                    </div>
                    <div class="span9">
                        <input type="text" name="Name" value="@Model.Name">
                    </div>
                </div>
            </div>
            <div class="formButtons">
                <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span9">
                        <button type="submit" class="button lButton bMuddy">Cập nhật</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

