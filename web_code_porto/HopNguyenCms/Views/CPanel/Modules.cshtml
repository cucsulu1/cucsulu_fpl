@using HopNguyenModel
@model IEnumerable<HopNguyenModel.Module>
@{
    ViewBag.Title = "Quản lý module";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
@if (Admins.Current != null)
{
    <div class="page-header position-relative">
        <h1>Quản lý module
        </h1>
    </div>
    <!--/.page-header-->
    if (Admins.Current.Id == 1)
    {
    <div class="row-fluid">
        <div class="choose-type">
            <div class="span2">
                <a href="/Cpanel/CreateTypeSupport" title="Thêm mới Loại hỗ trợ" class="btn btn-primary">Tạo mới</a>
            </div>
        </div>
    </div>
    }
    <div class="row-fluid">
        <table id="sample-table-2" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Tên module</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><a href="/Cpanel/EditModule/@item.Id">@item.Name</a></td>
                        <td>
                            <a href="/Cpanel/EditModule/@item.Id" title="Sửa">Sửa</a>
                            @if (Admins.Current.Id == 1)
                            {
                                
                                <a href="/Cpanel/DeleteModule/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">| Xóa</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
