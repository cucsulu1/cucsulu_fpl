@using HopNguyenModel
@model IEnumerable<HopNguyenModel.PageDetail>
@{
    ViewBag.Title = "Trang chi tiết";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
@if (Admins.Current != null)
{
    <div class="page-header position-relative">
        <h1>Cấu hình trang
        </h1>
    </div>
    <!--/.page-header-->
    <div class="row-fluid">
        @if (Admins.Current.Id == 1)
        {
            <div class="choose-type">
                <div class="span2">
                    <a href="/Cpanel/CreatePageDetail" title="Thêm mới trang" class="btn btn-info">Tạo mới</a>
                </div>
            </div>
        }
        <table id="tbl-sort-asc" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Tên trang</th>
                    <th>Meta title</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><a href="/Cpanel/EditPageDetail/@item.Id">@item.Name</a></td>
                        <td>@item.MetaTitle</td>
                        <td>
                            <a href="/Cpanel/EditPageDetail/@item.Id" title="Sửa">Sửa</a>
                            @if (Admins.Current.Id == 1)
                            {
                                
                                <a href="/Cpanel/DeletePageDetail/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">| Xóa</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
