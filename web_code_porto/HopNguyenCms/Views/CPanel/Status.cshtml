@using HopNguyenModel
@model IEnumerable<Status>
@{
    ViewBag.Title = "Quản lý trạng thái sản phẩm";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
@if (Admins.Current != null)
{
    <div class="page-header position-relative">
        <h1>Quản lý trạng thái sản phẩm
        </h1>
    </div>
    <!--/.page-header-->
    <div class="row-fluid">
        <div class="choose-type">
            <div class="span2">
                <a href="/Cpanel/CreateStatus" class="btn btn-primary">Tạo mới</a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <table id="sample-table-2" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><a href="/Cpanel/EditStatus/@item.Id">@item.Name</a></td>
                        <td>
                            <a href="/Cpanel/EditStatus/@item.Id" title="Sửa">Sửa</a>
                            <a href="/Cpanel/DeleteStatus/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">| Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
