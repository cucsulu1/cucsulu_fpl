@model IEnumerable<HopNguyenModel.Support>
@{
    ViewBag.Title = "Hỗ trợ trực tuyến";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="page-header position-relative">
    <h1>Hỗ trợ trực tuyến
    </h1>
</div>
<!--/.page-header-->
<div class="row-fluid">
    <div class="choose-type">
        <div class="span2">
            <a href="/Cpanel/CreateSupport" class="btn btn-primary">Tạo mới</a>
        </div>
    </div>
</div>
<div class="row-fluid">
    <table id="sample-table-2" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên hỗ trợ</th>
                <th>Tên nick</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Loại hỗ trợ</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><a href="/Cpanel/EditSupport/@item.Id">@item.Name</a></td>
                    <td>@item.Nick</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.TypeSupport.Name</td>
                    <td>
                        <a href="/Cpanel/EditSupport/@item.Id" title="Sửa">Sửa</a> | 
                            <a href="/Cpanel/DeleteSupport/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
