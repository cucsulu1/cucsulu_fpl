@using PagedList
@using PagedList.Mvc
@model IEnumerable<HopNguyenModel.TypeContent>
@{
    ViewBag.Title = "Danh mục tin";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}
<div class="page-header position-relative">
    <h1>Chuyên mục tin
    </h1>
</div>
<!--/.page-header-->
<div class="row-fluid">
    <div class="choose-type">
        <div class="span2">
            <a href="/Cpanel/CreateTypeNews" class="btn btn-primary">Tạo mới</a>
        </div>
        <div class="span4">
            <strong>Lọc nhóm cha</strong> @Html.DropDownList("Parent", null, "[No filter]", new { onchange = "parentchange(this.value)" })
        </div>
    </div>
</div>
<div class="row-fluid">
    <table id="tbl-sort-asc" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th style="text-align: left">Tên</th>
                <th>Chuyên mục</th>
                <th>Trạng thái</th>
                <th>Sắp xếp</th>
                <th>Ngày tạo</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td style="text-align: left;@(item.Parent == null ? "font-weight:bold" : "")"><a href="/Cpanel/EditTypeNews/@item.Id">@item.Name</a></td>
                    <td>@(item.TypeContent2 != null ? item.TypeContent2.Name : "Chuyên mục cha")</td>
                    <td>@(item.Status == true ? Html.Raw("<span class=\"label label-success arrowed\">Hiện</span>") : Html.Raw("<span class=\"badge badge-important\">Ẩn</span>"))</td>
                    <td>@item.Sort</td>
                    <td>@item.DateCreate</td>
                    <td>
                        <a href="/Cpanel/EditTypeNews/@item.Id" title="Sửa">Sửa</a> | 
                            <a href="/Cpanel/DeleteTypeNews/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
