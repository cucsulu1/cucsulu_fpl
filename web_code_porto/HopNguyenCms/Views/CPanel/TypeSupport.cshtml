@using HopNguyenModel
@model IEnumerable<HopNguyenModel.TypeSupport>
@{
    ViewBag.Title = "Loại hỗ trợ";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}

<div class="page-header position-relative">
    <h1>Loại hỗ trợ
    </h1>
</div>
<!--/.page-header-->
<div class="row-fluid">
    <div class="choose-type">
        <div class="span2">
            <a href="/Cpanel/CreateTypeSupport" title="Thêm mới Loại hỗ trợ" class="btn btn-primary">Tạo mới</a>
        </div>
    </div>
</div>
<div class="row-fluid">
    <table id="sample-table-2" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên loại</th>
                <th>Tham số</th>
                <th>Mẫu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><a href="/Cpanel/EditTypeSupport/@item.Id">@item.Name</a></td>
                    <td>@item.Parameter</td>
                    <td>@Html.Raw(item.Pattern)</td>
                    <td>
                        <a href="/Cpanel/EditTypeSupport/@item.Id" title="Sửa">Sửa</a> | 
                            <a href="/Cpanel/DeleteTypeSupport/@item.Id" onclick="javascript:return confirm('Are you sure?');" title="Xóa">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
