@model HopNguyenModel.Content
@using HopNguyenModel
                <aside class="sidebar">

                    <h4>Danh mục</h4>
                    <ul class="nav nav-list primary push-bottom">
                         @foreach (var item in  Model.GetOther.OrderByDescending(a => a.Id).Take(10))
                         {
                            <li><a href="/@item.TypeContent.Alias/@(item.Alias).html">@item.Name</a></li>
                         }
                    </ul>

                    <div class="tabs">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#popularPosts" data-toggle="tab"><i class="icon icon-star"></i>Liên quan</a></li>
                            <li><a href="#recentPosts" data-toggle="tab">Tin mới</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="popularPosts">
                                <ul class="simple-post-list">
                                    @foreach (var item in Model.GetOther.OrderByDescending(a => a.Id).Take(10))
                                    {
                                         <li>
                                        <div class="post-image">
                                            <div class="img-thumbnail">
                                                <a  href="/@item.TypeContent.Alias/@(item.Alias).html">
                                                    <img src="@item.Image" alt="@item.Name">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="post-info">
                                            <a  href="/@item.TypeContent.Alias/@(item.Alias).html">@item.Name</a>
                                            <div class="post-meta">
                                               @item.CreateDate
                                            </div>
                                        </div>
                                    </li>
                                    }
                        
                                   
                                </ul>
                            </div>
                            <div class="tab-pane" id="recentPosts">
                                <ul class="simple-post-list">
                                    @foreach (var item in new HopNguyenModel.Content().GetByTypeAlias("tin-tuc").OrderByDescending(p => p.CreateDate).Take(10))
                                    {
                                         <li>
                                        <div class="post-image">
                                            <div class="img-thumbnail">
                                                <a  href="/@item.TypeContent.Alias/@(item.Alias).html">
                                                    <img src="@item.Image" alt="@item.Name">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="post-info">
                                            <a  href="/@item.TypeContent.Alias/@(item.Alias).html">@item.Name</a>
                                            <div class="post-meta">
                                               @item.CreateDate
                                            </div>
                                        </div>
                                    </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                </aside>
<hr />
<div class="box">
    <div class="box-top">
        <h3>Thống kê truy cập</h3>
    </div>
    <div class="box-bg">
        <div class="text-box center">
            <a href="http://info.flagcounter.com/86Qh">
                <img src="http://s09.flagcounter.com/countxl/86Qh/bg_FFFFFF/txt_000000/border_FFFFFF/columns_2/maxflags_12/viewers_3/labels_1/pageviews_1/flags_0/" alt="Flag Counter" border="0"></a>
        </div>
    </div>
</div>
